
@{
    ViewBag.Title = "临床检查";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section head{
    <script src="~/Scripts/Areas/BreastCancer/BC_ScreeningAndDiagnosis_ClinicalExamination/Control.js"></script>
    <style>
        .my-style1{
            background-color:#e2ebfb;
            padding:3px;
            color:black;
            text-align:right;
            height:25px;
            /*width:10%;*/
            border:1px white solid;
        }
        
         .my-style2{
            background-color:#f1f3f5;
            padding:3px;
            color:black;
            text-align:right;
            height:25px;
            /*width:10%;*/
            border:1px white solid;
        }

        .my-style3{
            background-color:#f1f3f5;
            padding:3px;
            height:25px;
            /*width:10%;*/
            text-align:left;
            border:1px white solid;
        }

    </style>
}

<table border="1" style="border-collapse: collapse; width: 100%;background-color:#f1f3f5;text-align:center;" cellpadding="0" cellspacing="1">
    <tr style="text-align:center;">
       <td class="my-style1" style="width:8%;" rowspan="12">肿块</td>
        <td class="my-style2" style="width:8%" rowspan="6">大小</td>
        <td class="my-style1" style="width:4%">左</td>
        <td class="my-style3" style="width:80%" colspan="7">
            <label style="padding-left:1em;"><input type="checkbox" value="1" name="tumorsizeleft"  id="tumorsizeleft1"/>&lt;1cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="2" name="tumorsizeleft" id="tumorsizeleft2" />1-2cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="3" name="tumorsizeleft" id="tumorsizeleft3" />2-5cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="4" name="tumorsizeleft" id="tumorsizeleft4" />&gt;5cm</label>
        </td>
    </tr>
    <tr>
        <td class="my-style1" style="width:4%;">右</td>
        <td class="my-style3" style="width:80%" colspan="7">
            <label style="padding-left:1em;"><input type="checkbox" value="1" name="tumorsizeright" id="tumorsizeright1" />&lt;1cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="2" name="tumorsizeright" id="tumorsizeright2" />1-2cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="3" name="tumorsizeright" id="tumorsizeright3" />2-5cm</label>
            <label style="padding-left:2em;"><input type="checkbox" value="4" name="tumorsizeright" id="tumorsizeright4" />&gt;5cm</label>
        </td>
    </tr>


    <tr id="last">
        <td colspan="10" style="height: 25px; padding-top: 3px; border-left: 1px solid white; border-right: 1px solid white; border-bottom: 1px solid white">
            <div style="text-align: center; margin-top: 8px;">
                <input type="button" style="cursor: pointer; background-image: url(/images/image/1.jpg); border: none; height: 22px; width: 91px;" id="bt1" />
                <a style="padding-left: 2em"></a>
                <input type="button" id="cd" style="cursor: pointer; background-image: url(/images/image/2.jpg); border: none; height: 22px; width: 91px;" onclick="form1.reset()" />
            </div>
        </td>
    </tr>
</table>


